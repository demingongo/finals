<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing
        http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="user_registration_register" path="/">
        <default key="_controller">UserModule:RegistrationController:register</default>
    </route>

	<route id="user_registration_confirm" path="/confirm/{token}/{slug}">
        <default key="_controller">UserModule:RegistrationController:confirm</default>
    </route>
</routes>
